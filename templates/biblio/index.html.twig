{% extends 'base.html.twig' %}

{% block body %}

    <section>

        {% for artist in artists %}
            <article>
                <h2>{{ artist.name }}</h2>
                <div class="content">
                    <img src="http://placehold.it/350x150" alt="">
                    <a href="{{ path('artist_show', {id: artist.id}) }}" class="btn btn-primary">Lire la suite</a>
                </div>
            </article>
        {% endfor %}

    </section>

{% endblock %}
